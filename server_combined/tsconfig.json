{
	"compilerOptions": {
		"module": "commonjs",
		"noImplicitAny": true,
		"sourceMap": true,
		"removeComments": true,
		"preserveConstEnums": true,
		"declaration": true,
		"target": "esnext",
		"lib": [
			"esnext",
			"dom"
		],
		"outDir": "./dist",
		"noImplicitReturns": true,
		"noImplicitThis": true,
		"alwaysStrict": true,
		"noUnusedParameters": false,
		"pretty": true,
		"emitDecoratorMetadata": true,
		"noFallthroughCasesInSwitch": true,
		"allowUnreachableCode": false,
		"experimentalDecorators": true,
		"typeRoots": [
			"@types",
			"src/types/*.ts",
			"node_modules/**/*.d.ts"
		],
		"strict": true
	},
	"include": [
		"src/",
		"test/",
		"bindings",
	]
}